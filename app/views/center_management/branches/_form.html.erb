<div class="form-group">
  <%= f.label :avatar, Branch.human_attribute_name(:avatar) %>
  <%= f.file_field :avatar %>
  <%= f.hidden_field :avatar_cache %>
</div>

<div class="form-group">
  <%= f.label :name, Branch.human_attribute_name(:name) %>
  <%= f.text_field :name %>
</div>

<div class="form-group">
  <%= f.label :city, Branch.human_attribute_name(:city) %>
  <%= f.select :city_id, @support.city_options, {include_blank: t(".select_city")},
    class: "city_selection" %>
</div>

<div class="form-group">
  <%= f.label :district, Branch.human_attribute_name(:district) %>
  <%= f.select :district_id, @support.district_options, {include_blank: t(".select_district")},
    class: "district_selection" %>
</div>

<div class="form-group">
  <%= f.label :address, Branch.human_attribute_name(:address) %>
  <%= f.text_field :address %>
</div>

<div class="form-group">
  <%= f.label :description, Branch.human_attribute_name(:description) %>
  <%= f.text_area :description %>
</div>

<div class="form-group">
  <%= f.label :email, Branch.human_attribute_name(:email) %>
  <%= f.email_field :email %>
</div>

<div class="form-group">
  <%= f.label :phone_number, Branch.human_attribute_name(:phone_number) %>
  <%= f.text_field :phone_number %>
</div>

<%= f.button t(".preview"), name: :step, value: :preview %>
